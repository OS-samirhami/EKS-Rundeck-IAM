{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Service": "ec2.amazonaws.com"
            },
            "Action": "sts:AssumeRole",
            "Condition": {
                "StringEquals": {
                    "sts:SourceAccount": "316978178737"
                }
            },
            "ArnLike": {
                "aws:SourceArn": "arn:aws:ec2:*:316978178737:instance/*"
            }
        }
    ]
}